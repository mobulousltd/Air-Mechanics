<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:contentDescription="@string/app_name"
            android:id="@+id/img_logo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/profile"
            android:padding="@dimen/_20sdp"
            android:src="@drawable/logo" />

        <ScrollView
            android:layout_above="@+id/btn_bill"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/img_logo"
            android:layout_marginBottom="@dimen/_15sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/sp_bookDetailDescrip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/tv_Descrip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/description"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/_14sdp" />

                    <ImageView
                        android:id="@+id/img_Descrip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:src="@drawable/greyright_arrow" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/root_descripSP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_bookSP"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_80"
                        android:layout_marginBottom="@dimen/_6sdp"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_6sdp" />

                    <LinearLayout
                        android:id="@+id/ll_descp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp">

                        <TextView
                            android:id="@+id/tv_bookTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/title"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/tv_bookDescrip"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/description"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/gray" />

                <RelativeLayout
                    android:id="@+id/root_service_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sp_bookDetailDescrip"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/textView_serviceType_serviceProviderDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/service_type"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/_14sdp" />

                    <ImageView
                        android:id="@+id/imageView_rightArrow_serviceType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:src="@drawable/greyright_arrow" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/type_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/textView_service_type_dynamic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/not_available"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/textView_service_type_dynamic2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sp_minCharge"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/gray" />

                <!--SERVICE PROVIDER DETAILS-->

                <RelativeLayout
                    android:id="@+id/root_service_provider_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/root_logo_booking_detail"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/textView_service_provider_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/service_provider_detail"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/_14sdp" />

                    <ImageView
                        android:id="@+id/imageView_rightArrow_service_provider_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:src="@drawable/greyright_arrow" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/textView_service_provider_detail_dynamic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/not_available"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/gray" />

                <!--SERVICE PROVIDER ADDRESS-->

                <RelativeLayout
                    android:id="@+id/root_service_provider_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/root_logo_booking_detail"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/textView_service_provider_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/service_provider_address"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/_14sdp" />

                    <ImageView
                        android:id="@+id/imageView_rightArrow_service_provider_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:src="@drawable/greyright_arrow" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/textView_service_provider_address_dynamic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/dummy_address"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/gray" />


                <!--RATING-->

                <RelativeLayout
                    android:id="@+id/root_booking_detail_rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/root_logo_booking_detail"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/textView_booking_detail_rating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/rating_text"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/_14sdp" />

                    <ImageView
                        android:id="@+id/imageView_rightArrow_booking_detail_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:src="@drawable/greyright_arrow" />
                </RelativeLayout>

                <!--STARS-->

                <LinearLayout
                    android:id="@+id/linearlayout_starsFavorites_bookingDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/booking_star1"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:padding="@dimen/dp_3"
                        android:src="@drawable/gray_star" />

                    <ImageView
                        android:id="@+id/booking_star2"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:padding="@dimen/dp_3"
                        android:src="@drawable/gray_star" />

                    <ImageView
                        android:id="@+id/booking_star3"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:padding="@dimen/dp_3"
                        android:src="@drawable/gray_star" />

                    <ImageView
                        android:id="@+id/booking_star4"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:padding="@dimen/dp_3"
                        android:src="@drawable/gray_star" />

                    <ImageView
                        android:id="@+id/booking_star5"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:padding="@dimen/dp_3"
                        android:src="@drawable/gray_star" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/gray" />
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btn_bill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@color/home_header_color"
            android:text="@string/bill"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            app:font="@{`semibold`}" />
    </RelativeLayout>
</layout>

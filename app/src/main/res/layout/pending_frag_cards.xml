<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView_1_pendingFrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="@dimen/_3sdp">


            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/background_service_provider_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--PROFILE IMAGE-->
                    <mobulous12.airmechanics.utils.CircleImageView
                        app:civ_border_color="@color/circle_image_border"
                        app:civ_border_width="@dimen/sp_0.5"
                        app:civ_fill_color="@color/circle_image_border"
                        android:src="@drawable/default_profile_pic"
                        android:id="@+id/circularImageView_1_pendingFrag"
                        android:layout_margin="@dimen/_8sdp"
                        android:padding="@dimen/_3sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="@dimen/_65sdp"/>

                    <!--<mobulous12.airmechanics.utils.CircularImageView-->
                        <!--android:id="@+id/circularImageView_1_pendingFrag"-->
                        <!--android:layout_width="@dimen/_65sdp"-->
                        <!--android:layout_height="@dimen/_65sdp"-->
                        <!--android:layout_margin="@dimen/_8sdp"-->
                        <!--android:src="@drawable/garage_image"-->
                        <!--android:padding="@dimen/_3sdp"/>-->

                    <!--pending Frag job orders  details layout-->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/textView_jobOrderName_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:layout_toLeftOf="@+id/textView_jobOrderAmount_1"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp_16"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp_16"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:layout_alignParentEnd="true"
                                android:id="@+id/textView_jobOrderAmount_1"
                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/calendar"/>
                                    <TextView
                                        android:layout_marginLeft="@dimen/_6sdp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textColor="@color/gray"
                                        android:id="@+id/textView_jobOrderDate_1"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/watch"/>



                                    <TextView
                                        android:layout_marginLeft="@dimen/_6sdp"
                                        android:layout_gravity="center_vertical"
                                        android:id="@+id/textView_jobOrderTime_1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/booking_time"
                                        android:textColor="@color/gray"/>
                                </LinearLayout>
                            </LinearLayout>
                            <ImageView
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/right_arrow_myjob_order"
                                android:tint="@color/black"
                                android:id="@+id/imageView_jobOrderRightArrow_1" />
                        </RelativeLayout>


                    </LinearLayout>


                </LinearLayout>



                <!--Card Buttons-->
                <TextView
                    android:layout_alignParentBottom="true"
                    android:id="@+id/textView_jobOrderStatus_1"
                    style="@style/Base.Widget.AppCompat.ButtonBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/booking_pending_color"
                    android:gravity="start"
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingLeft="@dimen/_16sdp"
                    android:padding="@dimen/dp_7"
                    android:text="@string/booking_status_pending"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16"

                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>



    </LinearLayout>
</layout>
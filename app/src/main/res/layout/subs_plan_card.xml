<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/root_subsPlan"
        android:layout_margin="@dimen/_10sdp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rel_headingPlan1"
            android:background="@color/monthly_orange_color"
            android:layout_marginStart="@dimen/_1sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:paddingTop="@dimen/_1sdp"
            android:paddingBottom="@dimen/_1sdp"
            >

            <!--Card Buttons-->
            <TextView
                app:font="@{`roboto`}"
                android:id="@+id/tv_durationPlan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:paddingStart="@dimen/dp_8"
                android:paddingEnd="@dimen/dp_8"
                android:layout_marginStart="@dimen/_4sdp"
                android:text="@string/duration_myplan"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_20"
                android:layout_toStartOf="@+id/tv_amountPlan1"
                android:layout_alignParentStart="true"

                />


            <TextView
                app:font="@{`roboto`}"
                android:id="@+id/tv_amountPlan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text=""
                android:gravity="center"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_20"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
<View
    android:layout_above="@+id/rel_headingPlan2"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_1sdp"
    android:layout_marginStart="@dimen/_1sdp"
    android:layout_marginEnd="@dimen/_2sdp"
    android:background="@color/black">

</View>
        <RelativeLayout
            android:layout_below="@+id/rel_headingPlan1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rel_headingPlan2"
            android:background="@color/monthly_orange_color"
            android:layout_marginStart="@dimen/_1sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:paddingTop="@dimen/_1sdp"
            android:paddingBottom="@dimen/_1sdp"
            >

            <!--Card Buttons-->
            <TextView
                app:font="@{`roboto`}"
                android:id="@+id/tv_durationPlan2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:paddingStart="@dimen/dp_8"
                android:paddingEnd="@dimen/dp_8"
                android:layout_marginStart="@dimen/_4sdp"
                android:text="@string/duration_myplan"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_20"
                android:layout_toStartOf="@+id/tv_amountPlan2"
                android:layout_alignParentStart="true"


                />


            <TextView

                app:font="@{`roboto`}"
                android:id="@+id/tv_amountPlan2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text=""
                android:gravity="center"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_20"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>


        <RelativeLayout
            android:background="@drawable/box"
            android:id="@+id/root_boxSubscriptionPlan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_63sdp"
            android:layout_below="@+id/rel_headingPlan2"
            android:layout_marginBottom="@dimen/_10sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            >



            <Button
                app:font="@{`semibold`}"
                android:id="@+id/btn_buyNowSubsPlan"
                android:text="@string/buy_now_subscription"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:textAllCaps="false"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_70sdp"
                android:layout_marginRight="@dimen/_70sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/buy_now" />




        </RelativeLayout>
    </RelativeLayout>

</layout>